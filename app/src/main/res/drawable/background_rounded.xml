<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Warna latar belakang -->
    <solid android:color="#FFFFFF" />

    <!-- Radius untuk sudut melengkung -->
    <corners android:radius="12dp" />

    <!-- Warna dan ukuran batas (opsional, jika dibutuhkan border) -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Padding dalam jika dibutuhkan -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
